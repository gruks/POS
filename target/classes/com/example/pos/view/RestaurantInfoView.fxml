<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.pos.controller.RestaurantInfoController"
      spacing="20" 
      style="-fx-background-color: #f9fafb;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <children>
        <!-- Header -->
        <VBox spacing="8" 
              style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
            <Label text="Restaurant Information" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
            <Label text="Manage your restaurant details and legal information" 
                   style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
        </VBox>
        
        <!-- Form -->
        <ScrollPane fitToWidth="true" 
                   style="-fx-background: transparent; -fx-border-color: transparent;"
                   VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="16">
                    <!-- Basic Information Card -->
                    <VBox spacing="12" 
                          style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
                        <Label text="Basic Information" 
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
                        <Separator/>
                        
                        <GridPane hgap="16" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            
                            <Label text="Restaurant Name *" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                      promptText="Enter restaurant name"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                            
                            <Label text="Contact Number *" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="contactField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                      promptText="+91 XXXXX XXXXX"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                            
                            <Label text="Email" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                      promptText="restaurant@example.com"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                            
                            <Label text="Website" GridPane.rowIndex="3" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="websiteField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                      promptText="www.restaurant.com"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                        </GridPane>
                    </VBox>
                    
                    <!-- Address Card -->
                    <VBox spacing="12" 
                          style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
                        <Label text="Address Details" 
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
                        <Separator/>
                        
                        <GridPane hgap="16" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            
                            <Label text="Street Address *" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="addressField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                      promptText="Building, Street, Area"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                            
                            <Label text="City *" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="cityField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                      promptText="City name"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                            
                            <Label text="State *" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="stateField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                      promptText="State name"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                            
                            <Label text="PIN Code *" GridPane.rowIndex="3" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="pinCodeField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                      promptText="6-digit PIN code"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                        </GridPane>
                    </VBox>
                    
                    <!-- Legal Information Card -->
                    <VBox spacing="12" 
                          style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
                        <Label text="Legal Information" 
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
                        <Separator/>
                        
                        <GridPane hgap="16" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            
                            <Label text="GSTIN" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="gstinField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                      promptText="GST Identification Number"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                            
                            <Label text="FSSAI License *" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                   style="-fx-font-weight: 600; -fx-text-fill: #374151;"/>
                            <TextField fx:id="fssaiField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                      promptText="14-digit FSSAI License Number"
                                      style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                        </GridPane>
                        
                        <Label text="* Required fields" 
                               style="-fx-font-size: 12px; -fx-text-fill: #6b7280; -fx-font-style: italic;"/>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="12" alignment="CENTER_RIGHT">
                        <Button fx:id="saveBtn" 
                                text="ðŸ’¾ Save Information" 
                                onAction="#onSave"
                                style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
