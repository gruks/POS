<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="8" fx:controller="com.example.pos.controller.MenuController">
    <children>
      <HBox spacing="8">
        <children>
          <TextField fx:id="searchField" promptText="Search items by name" HBox.hgrow="ALWAYS"/>
          <ChoiceBox fx:id="categoryFilter" prefWidth="160.0"/>
          <Button fx:id="addBtn" text="Add Item"/>
          <Button fx:id="manageCategoriesBtn" text="Categories"/>
        </children>
      </HBox>
      <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameCol" text="Item Name" prefWidth="260.0"/>
          <TableColumn fx:id="categoryCol" text="Category" prefWidth="160.0"/>
          <TableColumn fx:id="priceCol" text="Price" prefWidth="120.0"/>
          <TableColumn fx:id="qtyCol" text="Quantity" prefWidth="120.0"/>
          <TableColumn fx:id="actionsCol" text="Actions" prefWidth="180.0"/>
        </columns>
      </TableView>
    </children>
    <padding><Insets top="12" left="12" right="12" bottom="12"/></padding>
</VBox>
