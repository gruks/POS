<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.pos.controller.MenuController"
      spacing="16"
      style="-fx-background-color: #f9fafb;">
    
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <children>
        <!-- Header -->
        <VBox spacing="4">
            <Label text="Menu Management" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
            <Label text="Manage your restaurant menu items and categories" 
                   style="-fx-font-size: 16px; -fx-text-fill: #6b7280;"/>
        </VBox>

        <!-- Controls Bar -->
        <HBox spacing="12" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-padding: 12; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
            <children>
                <TextField fx:id="searchField" 
                          promptText="ðŸ” Search items by name..." 
                          HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12;"/>
                
                <Label text="Category:" style="-fx-font-weight: 600;"/>
                <ChoiceBox fx:id="categoryFilter" 
                          prefWidth="160"
                          style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 6; -fx-background-radius: 6;"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button fx:id="manageCategoriesBtn" 
                       text="ðŸ“ Categories"
                       style="-fx-background-color: #6b7280; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: 600;"/>
                <Button fx:id="addBtn" 
                       text="+ Add Item"
                       style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: 600;"/>
            </children>
        </HBox>

        <!-- Table -->
        <TableView fx:id="table" 
                  VBox.vgrow="ALWAYS"
                  style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
            <columns>
                <TableColumn fx:id="nameCol" text="Item Name" prefWidth="280"/>
                <TableColumn fx:id="categoryCol" text="Category" prefWidth="180"/>
                <TableColumn fx:id="priceCol" text="Price" prefWidth="140"/>
                <TableColumn fx:id="qtyCol" text="Quantity" prefWidth="140"/>
                <TableColumn fx:id="actionsCol" text="Actions" prefWidth="200"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="12" style="-fx-padding: 40;">
                    <Label text="ðŸ“‹" style="-fx-font-size: 48px;"/>
                    <Label text="No menu items found" 
                           style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
                    <Label text="Click 'Add Item' to create your first menu item" 
                           style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
                </VBox>
            </placeholder>
        </TableView>
    </children>
</VBox>
