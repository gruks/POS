<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.pos.controller.KOTController"
      spacing="16"
      style="-fx-background-color: #f9fafb;">
    
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <!-- Header -->
    <VBox spacing="4">
        <Label text="Kitchen Order Tickets" 
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
        <Label text="Manage and track kitchen orders in real-time" 
               style="-fx-font-size: 16px; -fx-text-fill: #6b7280;"/>
    </VBox>

    <!-- Summary Cards -->
    <HBox spacing="16">
        <VBox style="-fx-background-color: white; -fx-padding: 16; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);"
              alignment="CENTER_LEFT" spacing="4" HBox.hgrow="ALWAYS">
            <Label text="Pending" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Label fx:id="pendingCountLabel" text="0" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f59e0b;"/>
        </VBox>

        <VBox style="-fx-background-color: white; -fx-padding: 16; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);"
              alignment="CENTER_LEFT" spacing="4" HBox.hgrow="ALWAYS">
            <Label text="Preparing" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Label fx:id="preparingCountLabel" text="0" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
        </VBox>

        <VBox style="-fx-background-color: white; -fx-padding: 16; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);"
              alignment="CENTER_LEFT" spacing="4" HBox.hgrow="ALWAYS">
            <Label text="Ready" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Label fx:id="readyCountLabel" text="0" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
        </VBox>
    </HBox>

    <!-- Controls -->
    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Filter:" style="-fx-font-weight: 600;"/>
        <ComboBox fx:id="filterComboBox" prefWidth="150"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Button fx:id="refreshBtn" text="ðŸ”„ Refresh" 
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;"/>
        <Button fx:id="clearCompletedBtn" text="ðŸ—‘ Clear Completed" 
                style="-fx-background-color: #6b7280; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;"/>
    </HBox>

    <!-- KOT Cards Container -->
    <ScrollPane fitToWidth="true" 
                style="-fx-background: transparent; -fx-border-color: transparent;"
                VBox.vgrow="ALWAYS">
        <FlowPane fx:id="kotContainer" 
                  hgap="16" 
                  vgap="16"
                  style="-fx-background-color: transparent;">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
        </FlowPane>
    </ScrollPane>
</VBox>
